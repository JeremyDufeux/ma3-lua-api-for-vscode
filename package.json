{
  "name": "ma3-lua-api",
  "displayName": "Ma3 Lua Api for VS Code",
  "description": "Lua extension for Grand Ma 3 Api",
  "version": "1.5.0",
	"publisher": "Carrot-Industries",
  "author": {
    "name": "Jeremy Dufeux",
    "email": "contact@carrot-industries.com"
  },
  "license": "GPL v3",
  "homepage": "https://github.com/JeremyDufeux/ma3-lua-api-for-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeremyDufeux/ma3-lua-api-for-vscode.git"
  },
  "icon": "images/logo.png",
  "bugs": {
    "url": "https://github.com/JeremyDufeux/ma3-lua-api-for-vscode/issues"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "activationEvents": [
    "onLanguage:lua"
  ],
  "main": "./src/extension.js",
  "files": [
    "resources/ma3_documented_api.lua"
  ],
  "extensionDependencies": [
    "sumneko.lua"
  ],
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.4.1"
  },
  "keywords": [
    "lua",
    "grandma3",
    "api",
    "vscode-extension"
  ], 
  "contributes": {
    "configuration": {
      "title": "GrandMa 3",
      "properties": {
        "grandMa3.apiVersion": {
          "type": "string",
          "description": "Select the GrandMa 3 API version"
        },
        "grandMa3.lastInstalledVersion": {
          "type": "string",
          "description": "Last installed extension version"
        },
        "grandMa3.extensionEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable GrandMa 3 extension for this workspace"
        },
        "grandMa3.removed-undefined-field-diagnostics": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "description": "Internal flag to prevent re-disabling undefined-field diagnostics if already processed."
        },
        "grandMa3.terminalPath": {
          "type": "string",
          "default": "",
          "description": "Manual path to app_terminal (leave empty for auto-detection)."
        },
        "grandMa3.terminalSystemMonitorVisibility": {
          "type": "boolean",
          "default": true,
          "description": "Show/Hide System Monitor Terminal Button"
        },
        "grandMa3.terminalCommandLineVisibility": {
          "type": "boolean",
          "default": true,
          "description": "Show/Hide Command Line Terminal Button"
        }
      }
    },
    "commands": [
      {
        "command": "grandMa3.menu",
        "title": "GrandMa 3: Open Menu",
        "category": "GrandMA 3 API"
      },
      {
        "command": "grandMa3.openSysmon",
        "title": "Open Ma3 System Monitor",
        "category": "GrandMA 3 API",
        "icon": "$(terminal)" 
      },
      {
        "command": "grandMa3.openCmdLine",
        "title": "Open Ma3 Command Line",
        "category": "GrandMA 3 API",
        "icon": "$(terminal)" 
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "grandMa3.menu",
          "when": "editorLangId == lua"
        }
      ]
    }
  }
}
